{
  "name": "d2l-design-system",
  "description": "",
  "scripts": {
    "build": "rimraf dist && rollup -c rollup.config.js",
    "generate-component-doc-details": "node ./cli/generate-component-doc-details.js",
    "lint": "npm run lint:eslint && npm run lint:lit",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "lint:lit": "lit-analyzer src/*.js --strict --rules.no-unknown-tag-name off",
    "start:build": "npm run build && es-dev-server --root-dir dist --app-index index.html --open --compatibility none",
    "start": "npm run generate-component-doc-details && es-dev-server --app-index index.html --node-resolve --open --watch",
    "test": "npm run lint && karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false"
  },
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "devDependencies": {
    "@open-wc/building-rollup": "^1",
    "@open-wc/eslint-config": "^2",
    "@open-wc/testing": "^2",
    "@open-wc/testing-karma": "^3",
    "deepmerge": "^4",
    "es-dev-server": "^1",
    "eslint": "^7",
    "eslint-config-brightspace": "^0.9.0",
    "eslint-plugin-html": "^6",
    "eslint-plugin-lit": "^1",
    "eslint-plugin-sort-class-members": "^1",
    "lit-analyzer": "^1",
    "marked": "^1",
    "rimraf": "^3",
    "rollup": "^2"
  },
  "dependencies": {
    "@brightspace-ui/core": "^1",
    "d2l-table": "BrightspaceUI/table#semver:^2",
    "lit-element": "^2",
    "lit-html": "^1",
    "page": "^1"
  }
}
